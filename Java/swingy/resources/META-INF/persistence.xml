<?xml version="1.0" encoding="UTF-8" ?>
<persistence
    version="2.0"
    xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="swingy" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>za.co.wethinkcode.swingy.models.Hero</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/db_swingy" />
      <property name="javax.persistence.jdbc.user" value="dbadmin" />
      <property name="javax.persistence.jdbc.password" value="password1" />
    </properties>
  </persistence-unit>
</persistence>